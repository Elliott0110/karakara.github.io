# Copy this file to .env and fill values
# Either set SERVICE_ACCOUNT_JSON (entire JSON string) OR set GOOGLE_APPLICATION_CREDENTIALS to a path with the service account JSON.
SERVICE_ACCOUNT_JSON=
# Or: GOOGLE_APPLICATION_CREDENTIALS=./service-account.json

# The Drive folder ID that contains images. Example folder URL:
# https://drive.google.com/drive/folders/12Ksg3saeVQxY9uKL3i8eM3XqjdE-qsvm
# Folder ID in that example is: 12Ksg3saeVQxY9uKL3i8eM3XqjdE-qsvm
DRIVE_FOLDER_ID=

# Server listen port
PORT=3000

# Optional: set to true to enable uploads endpoint (requires drive.file scope in service account)
ENABLE_UPLOAD=true
